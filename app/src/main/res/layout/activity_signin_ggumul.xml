<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_signin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_signin_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="회원가입"
            android:textColor="#1122cc"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/btn_signin_back"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/img_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_up_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/const_signin" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:background="@drawable/sign_up_finish_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/const_signin" />

    <EditText
        android:id="@+id/edt_signin_name"
        android:layout_width="0dp"
        android:layout_height="43.3dp"
        android:layout_marginLeft="26.7dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edt_signin_custom"
        android:hint="   김민진"
        android:textColor="#9b9ba1"
        android:textSize="16.7sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_profile" />
    <View
        android:id="@+id/name_line"
        android:layout_width="0dp"
        android:layout_height="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/edt_signin_name"
        android:background="@drawable/line_custom"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="35dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#42448b"
        android:text="이름" app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/name_line"
        android:layout_marginRight="38.3dp"
        android:layout_marginBottom="4dp"/>
    <EditText
        android:id="@+id/edt_signin_id"
        android:layout_width="0dp"
        android:layout_height="29.7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_line"
        android:layout_marginLeft="28.3dp"
        android:layout_marginRight="115dp"
        android:layout_marginTop="15.3dp"
        android:background="@drawable/edt_signin_custom"
        android:textSize="12sp"
        android:textColor="#9b9ba1"
        android:hint="   dreamy58"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/edt_signin_id"
        app:layout_constraintTop_toBottomOf="@id/name_line"
        android:background="@drawable/dots"
        android:layout_marginLeft="6.3dp"
        android:layout_marginTop="35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#42448b"
        app:layout_constraintLeft_toRightOf="@id/edt_signin_id"
        android:text="아이디"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/edt_signin_id"
        app:layout_constraintBottom_toBottomOf="@id/edt_signin_id"
        android:layout_marginLeft="28.7dp"
        android:layout_marginRight="52.7dp"/>

    <EditText
        android:id="@+id/edt_signin_pw"
        android:layout_width="0dp"
        android:layout_height="29.7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_signin_id"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginLeft="28.3dp"
        android:layout_marginRight="115dp"
        android:layout_marginTop="11dp"
        android:hint="   **********"
        android:background="@drawable/edt_signin_custom"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dots"
        app:layout_constraintLeft_toRightOf="@id/edt_signin_pw"
        app:layout_constraintTop_toBottomOf="@id/edt_signin_id"
        android:layout_marginLeft="5.7dp"
        android:layout_marginTop="35.7dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#42448b"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/edt_signin_pw"
        app:layout_constraintLeft_toRightOf="@id/edt_signin_pw"
        app:layout_constraintBottom_toBottomOf="@id/edt_signin_pw"
        android:layout_marginLeft="27.7dp"
        android:layout_marginRight="39.7dp"
        android:text="비밀번호" />
    <EditText
        android:id="@+id/edt_signin_pw_check"
        android:layout_width="0dp"
        android:layout_height="29.7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_signin_pw"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginLeft="28.3dp"
        android:layout_marginRight="115dp"
        android:layout_marginTop="11dp"
        android:hint="   **********"
        android:background="@drawable/edt_signin_custom"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dots"
        app:layout_constraintLeft_toRightOf="@id/edt_signin_pw_check"
        app:layout_constraintTop_toBottomOf="@id/edt_signin_pw"
        android:layout_marginLeft="5.7dp"
        android:layout_marginTop="35.7dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#42448b"
        app:layout_constraintLeft_toRightOf="@id/edt_signin_pw_check"
        app:layout_constraintTop_toTopOf="@id/edt_signin_pw_check"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/edt_signin_pw_check"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="11.7dp"
        android:text="비밀번호 확인" />
    <EditText
        android:id="@+id/edt_signin_birth"
        android:layout_width="0dp"
        android:layout_height="29.7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_signin_pw_check"
        android:layout_marginLeft="28.3dp"
        android:layout_marginRight="115dp"
        android:layout_marginTop="15.3dp"
        android:background="@drawable/edt_signin_custom"
        android:textSize="12sp"
        android:textColor="#9b9ba1"
        android:hint="   1997/06/26"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/edt_signin_birth"
        app:layout_constraintTop_toBottomOf="@id/edt_signin_pw_check"
        android:background="@drawable/dots"
        android:layout_marginLeft="6.3dp"
        android:layout_marginTop="35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#42448b"
        app:layout_constraintLeft_toRightOf="@id/edt_signin_birth"
        android:text="아이디"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/edt_signin_birth"
        app:layout_constraintBottom_toBottomOf="@id/edt_signin_birth"
        android:layout_marginLeft="26.3dp"
        android:layout_marginRight="40.3dp"/>
    <EditText
        android:id="@+id/edt_signin_place"
        android:layout_width="0dp"
        android:layout_height="29.7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_signin_birth"
        android:layout_marginLeft="28.3dp"
        android:layout_marginRight="115dp"
        android:layout_marginTop="15.3dp"
        android:background="@drawable/edt_signin_custom"
        android:textSize="12sp"
        android:textColor="#9b9ba1"
        android:hint="   서울시 용산구"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/edt_signin_place"
        app:layout_constraintTop_toBottomOf="@id/edt_signin_birth"
        android:background="@drawable/dots"
        android:layout_marginLeft="6.3dp"
        android:layout_marginTop="35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#42448b"
        app:layout_constraintLeft_toRightOf="@id/edt_signin_place"
        android:text="사는 곳"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/edt_signin_place"
        app:layout_constraintBottom_toBottomOf="@id/edt_signin_place"
        android:layout_marginLeft="26.3dp"
        android:layout_marginRight="40.3dp"/>

    <View
        android:id="@+id/signin_line"
        android:layout_width="0dp"
        android:layout_height="7.3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#e5e5e5"
        app:layout_constraintTop_toBottomOf="@id/edt_signin_place"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="134dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16.7sp"
        android:textColor="#42448b"
        android:text="나의 관심사"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin_line"
        android:layout_marginLeft="19.7dp"
        android:layout_marginRight="252dp"
        android:layout_marginTop="15.3dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/plus"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_line"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="330dp"
        android:layout_marginTop="50.7dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>