<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="534dp"
    android:layout_height="783dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/rv_img"
        android:layout_width="482dp"
        android:layout_height="500dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="21dp"
        android:src="@drawable/tae"/>
    <TextView
        android:id="@+id/rv_txt_kind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="말티즈"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_img"
        android:textSize="40dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="332dp"
        android:layout_marginTop="33dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_txt_kind"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="74dp">
        <TextView
            android:id="@+id/age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="나이 : "
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/rv_txt_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/age"
            app:layout_constraintTop_toTopOf="parent"
            android:text="3"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="살 추정"
            android:textSize="25dp"
            app:layout_constraintLeft_toRightOf="@id/rv_txt_age"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/const_1"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="74dp">
        <TextView
            android:id="@+id/charac"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="25dp"
            android:text="특징 : "/>
        <TextView
            android:id="@+id/rv_txt_charac"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="치석이 있으며 ~"
            android:textSize="25dp"
            app:layout_constraintLeft_toRightOf="@+id/charac"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/const_2"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="74dp">
        <TextView
            android:id="@+id/place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="보호 장소 : "
            android:textSize="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/rv_txt_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="인천시 연수구 "
            app:layout_constraintLeft_toRightOf="@id/place"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>